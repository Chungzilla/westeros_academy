<div class="container-fluid">

    <div class="options">
        <div class="small-action"> 
            <%= link_to 'Back to Courses', courses_path %> 
        </div>
    </div>

    <div class="edit-wrapper">

        <h1>Edit Course</h1>

        <%= form_for @course do |f|%>
            <div class="form-group"> 
                <label for="courseName">Course Name:</label>
                <%= f.text_field :name %>
            </div>
            <div class="form-group">
                <label for="totaHours">Total Hours:</label> 
                <%= f.text_field :total_hours %>
            </div>
            <div class="form-group"> 
                <label for="syllabus">Syllabus:</label> 
                <%= f.text_area :syllabus %> 
            </div>
            <div> <%= f.button :submit %> </div>
        <% end %>

    </div>
</div>