<html>
<head>
<style>
table {
    border-collapse: collapse;
}

table, th, td {
    border: 1px solid black;
}

</style>

<div class="container-fluid">
    <div class="action"> <%= link_to 'Students', students_path %> </div>
    <div class="action"> <%= link_to 'Instructors', new_instructor_path %> </div>
    <div class="action"> <%= link_to 'Courses', new_course_path %> </div>
    <div class="action"> <%= link_to 'Enrollments', new_enrollment_path %> </div>

<h1>Users</h1>
<table style="width:100%">
        <tr>
            <th> User ID</th>
            <th> Name</th>
            <th> Email</th>
            <th> User Type</th>
            <th> Username</th>
            <th> Password</th>
            <th> House</th>
        </tr>

<% @users.each do |single_user| %>
        <tr>
            <td> <%= single_user.id %> </td>
            <td>  <%= single_user.first_name %> <%= single_user.last_name %> </td>
            <td> <%= single_user.email %></td>
            <td> <%= single_user.userable_type %></td>
            <td> <%= single_user.username %> </td>
            <td> <%= single_user.password %> </td>
            <td> <%= single_user.house.name %> </td>
        </tr>
    <% end %>
</table>

