<!DOCTYPE html>
<html>
<head>
<style>
table {
    border-collapse: collapse;
}

table, th, td {
    border: 1px solid black;
}

</style>

<h1>Users</h1>
<table style="width:100%">
        <tr>
            <th> User ID</th>
            <th> Name</th>
            <th> Email</th>
            <th> Username</th>
            <th> Password</th>
            <th> House</th>
        </tr>

<% @users.each do |single_user| %>
        <tr>
            <td> <%= single_user.id %> </td>
            <td>  <%= single_user.first_name %> <%= single_user.last_name %> </td>
            <td> <%= single_user.email %></td>
            <td> <%= single_user.username %> </td>
            <td> <%= single_user.password %> </td>
            <td> <%= single_user.house.name %> </td>
        </tr>
        <% end %>
    </table>

