<div class="container-fluid">
    <div class="options">

        <div class="small-action"> 
            <%= link_to 'Add New Course', new_course_path %> 
        </div>
    </div>

<table style="width:100%">
        <thead>
            <th> Course ID</th>
            <th> Name</th>
            <th> Total Hours</th>
            <th> Edit</th>
            <th> Delete</th>
        </thead>

<% @courses.each do |single_course| %>
        <tr>
            <td> <%= single_course.id %> </td>
            <td> <%= link_to single_course.name, {:action => 'show', :id => single_course.id} %> </td>
            <td> <%= single_course.total_hours %></td>
            <td> <%= link_to 'Edit', edit_course_path(single_course.id) %> </td>
            <td> <%= link_to 'Delete', single_course, method: :delete, remote:true, data: { confirm: 'Are you sure?' } %> </td>
            
        </tr>
        <% end %>
    </table>