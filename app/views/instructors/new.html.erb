<div class="container-fluid">
    <div class="edit-wrapper">

        <h1>Create New Instructor</h1>

        <%= form_for @instructor, html: {multipart: true} do |f|%>
        <%= fields_for :user, @instructor.user do |p| %>
            <div class="form-group"> 
                <label for="firstName">First Name:</label>
                <%= p.text_field :first_name %>
            </div>
            <div class="form-group">
                <label for="lastName">Last Name:</label> 
                <%= p.text_field :last_name %>
            </div>
            <div class="form-group"> 
                <label for="gender">Gender:</label> 
                <%= p.select :gender, User.gender %> 
            </div>
            <div class="form-group"> 
                <label for="house">House:</label> 
                <%= p.select :house_id, House.all.map{|x|[x.name, x.id]} %>
            </div>
            <div class="form-group">
                <label for="username">Username:</label> 
                <%= p.text_field :username %>
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <%= p.text_field :email %>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <%= p.text_field :password %>
            </div>
        <% end %>
        <div> <%= f.button :submit %> </div>
        <% end %>
    </div>
</div>