


    <h1>Create New Enrollment</h1>
    <br>
    <%= form_with scope: :enrollment, url: enrollments_path, local: true do |f| %>
        <div class="form-group">
            <label>Select Student / Instructor</label>
            <%= collection_select(:enrollment, :user_id, User.all, :id, :full_name, {}, {:class=>'form-control'}) %>
        </div>

        <div class="form-group">
            <label>Select Course</label>
            <%= collection_select(:enrollment, :course_id, Course.all, :id, :name, {}, {:class=>'form-control'}) %>
        </div>
        <%= f.button :Submit, class: 'btn btn-primary submit-button' %>
<% end %>

